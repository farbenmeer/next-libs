{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": [
    "package.json",
    "tsup-defaults.ts",
    "packages/*/tsup.config.ts",
    "packages/*/package.json",
    "packages/*/src/**/*.ts",
    "packages/*/test/**/*.ts"
  ]
}
